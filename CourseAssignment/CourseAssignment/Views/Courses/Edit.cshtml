@model CourseAssignment.Models.Course

@{
    ViewBag.Title = "Create";
}

<style>
    .form-designstyle {
        float: left;
        margin-top: 1%;
        margin-right: 2%;
    }
</style>

<h2>Create A Course Plan</h2>

@using (Html.BeginForm())
{
    <hr />
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label form-designstyle col-md-2">Batch</label>
                @Html.DropDownList("BatchId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BatchId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label form-designstyle col-md-2">Semester</label>
                @Html.DropDownList("SemesterId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SemesterId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label form-designstyle col-md-2">Time</label>
                @Html.DropDownList("ClassTimeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClassTimeId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="col-md-2" style="float:right;">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label form-designstyle col-md-2">Subject</label>
                @Html.DropDownList("WeekDayId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.WeekDayId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label form-designstyle col-md-2">Campus</label>
                @Html.EditorFor(model => model.Campus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Campus, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label form-designstyle col-md-2">Room</label>
                @Html.EditorFor(model => model.RoomNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoomNo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}



<div>
    @Html.ActionLink("Back to List", "Index")
</div>
