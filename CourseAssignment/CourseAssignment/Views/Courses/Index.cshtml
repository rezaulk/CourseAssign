@model IEnumerable<CourseAssignment.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Batch.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassTime.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semester.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeekDay.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Campus)
        </th>
        <th>
            <input type="text" class="form-control"/>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.TextBoxFor(modelItem => item.Batch.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassTime.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semester.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeekDay.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Campus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomNo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
