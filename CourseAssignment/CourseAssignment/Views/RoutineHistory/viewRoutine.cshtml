
@{
    ViewBag.Title = "viewRoutine";
}

<h2>Select Batch</h2>
<hr />
@using (Html.BeginForm("viewRoutine", "RoutineHistory"))
{

    <div class="form-group">
        <label class="control-label form-designstyle col-md-3">Batch Name</label>
        @Html.DropDownList("Batch", new SelectList(ViewBag.Batches, "Id", "Name"), "--Select--", htmlAttributes: new { @class = "form-control" })
        
    </div>
    <div class="form-group">
        <label class="control-label form-designstyle col-md-3">Semester Name</label>
        @Html.DropDownList("SemesterName", new SelectList(ViewBag.SemesterName, "SemesterName", "SemesterName"), "--Select--", htmlAttributes: new { @class = "form-control" })

    </div>
    <div class="form-group">
        <label class="control-label form-designstyle col-md-3">Year</label>
        @Html.DropDownList("Year", new SelectList(ViewBag.Year, "Year", "Year"), "--Select--", htmlAttributes: new { @class = "form-control" })

    </div>
    <div>
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
}

